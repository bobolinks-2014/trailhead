<div class="content">
    <div class="trail-name"><h1><%= @trail.name %></h1></div>
    <div class="rating">Rating: <%= @trail.rating == nil ? 0 : @trail.rating %></div>
    <div class="user-features">
      <div class="user-buttons">
        <button class="comment-button">Comment</button>
          <form class="upload-button" accept-charset-"UTF-8" action="trails/<%= @trail.id %>/photos" class="new_photo" enctype="multipart/form-data" id="new_photo" method="POST">
            <input id="photo_trail_id" name="photo[trail_id]" type="hidden">
            <input class="choose-photo" id="photo_image" name="photo[image]" type="file">
            <input class="submit-photo" name="commit" type="submit" value="Submit Photo">
          </form>
      </div>
    </div>
    <div class="show-map"></div>
    <div class="trail-location"><%= @trail.city %>, <%= @trail.state %></div>
    <div class="trail-metrics">Length: <%= @trail.length %>  Difficulty: <% @trail.difficulty %></div>
    <div class="description"><p><%= @trail.description %></p></div>
    <div class="trail-carousel"></div>
    <div class="comments-section">
      <% if @trail.comments != [] %>
      <% @trail.comments.each do |comment| %>
      <div class="one-comment">
        <div class="comment-top">
          <div class="comment-top-left">
            <%= comment.user.username %> <%= Date.parse(comment.created_at.to_s) %>
          </div>
          <div class="comment-top-right">
            rating: <%= comment.rating %> difficulty: <%= comment.difficulty %>
          </div>
        </div>
        <div class="comment-review"><div class="comment-review-body">
          <p><%= comment.review %></div></p>
        </div>
        <div class="comment-bottom">
          <div class="comment-tip">
            <p>Tip: <%= comment.tip %></p>
          </div>
          <div class="comment-date-hiked">
            date hiked: <%= comment.date_hiked %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
<!-- ravi added to test photos -->
<div>
<%= form_for @photo, url: {action: "create", controller: "photos", trail_id: @trail.id }, :html => {:multipart => true} do |f| %>
  <%= f.hidden_field :trail_id %>
  <p><%= f.file_field :image %></p>
  <p><%= f.submit %></p>
<% end %>
</div>

<div>
  <% @trail.photos.each do |photo| %>
    <%= image_tag photo.image_url(:thumb).to_s %>
  <% end %>
</div>
